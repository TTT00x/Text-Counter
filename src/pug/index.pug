include ./_util/_svg-use

-
  var meta = {
    dir: '',
    title: '',
    description: '',
    keywords: ''
  };

doctype html
html(lang="ja")
  head
    title=meta.title
    meta(content=meta.description, name='description')
    meta(content=meta.keywords, name='keywords')
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    meta(name="format-detection", content="telephone=no")
    link(rel='stylesheet', href=`${meta.dir}css/style.css`)
  body
    .main-Wrapper
      h1.u-VisibilityHidden 文字数カウンター
      textarea.main-TextBox#textBox
      p.counter#counter
      .main-ButtonWrapper
        button.main-Button submit
        a.main-Button(href='') ツイートする
    .praise#praise(aria-expanded='false')
    script(src='./js/bundle.js')